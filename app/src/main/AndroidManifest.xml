<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!--allow internet permission, so can access the api-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--allow camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--Declare camera feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeerStack">
    <!-- android:networkSecurityConfig="@xml/network_security_config"> -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"/>

        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"/>

        <activity
            android:name=".ThirdActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.BeerStack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".FourthActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".FifthActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            />

        <activity
            android:name=".SixthActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".SeventhActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".EighthActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".NinthActivity"
            android:exported="true"
            android:theme="@style/Theme.BeerStack"
            android:windowSoftInputMode="adjustResize"
            />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>